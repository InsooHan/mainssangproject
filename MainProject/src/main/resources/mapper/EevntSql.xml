<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mini.data.mapper.EventMapperInter">
	<select id="getTotalCount" parameterType="Map" resultType="int">
		select count(*) from event
		<if test="searchcolumn!=null and searchword!=null">
			where ${searchcolumn} like concat('%',#{searchword},'%')
		</if>
	</select>
	<insert id="insertEvent"  parameterType="evdto">
		insert into admin values(null,#{category},#{subject},#{uploadfile},#{content},#{startday},#{endday},now())
	</insert>
		<select id="getListAll" parameterType="Map" resultType="evdto">
		select * from event 
		<if test="searchcolumn!=null and searchword!=null">
			where ${searchcolumn} like concat('%',#{searchword},'%')
		</if>
		order by num desc limit #{start},#{perpage}
	</select>
</mapper>